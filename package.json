{
  "name": "fusen",
  "version": "0.1.0",
  "description": "HTML based data template engine",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "test": "jest",
    "prebuild": "rimraf dist",
    "build": "run-p build:*",
    "build:common": "tsc",
    "build:esm": "tsc -p tsconfig.esm.json",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint . --ext .ts,.tsx --fix",
    "lint:prettier": "prettier --write .",
    "prepare": "simple-git-hooks"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "fusen": "./dist/bin/index.js"
  },
  "engines": {
    "node": ">=14"
  },
  "simple-git-hooks": {
    "pre-commit": "npm test && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/masaharu-kato/fusen.git"
  },
  "keywords": [
    "Template",
    "engine"
  ],
  "author": "Masaharu Kato",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/masaharu-kato/fusen/issues"
  },
  "homepage": "https://github.com/masaharu-kato/fusen#readme",
  "devDependencies": {
    "@jest/types": "^28.1.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.36",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.0",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2",
    "jest-environment-jsdom": "^28.1.3"
  }
}
